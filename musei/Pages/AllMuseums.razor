@page "/allmuseums"
@using Radzen
@using musei.Data
@inject CosmosService cs

<br />

<div class="flexColumn">
    <div class="museumList">
        @if (cs.museums.Count == 0)
        {
            <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" />
        }
        else
        {
            <MuseumCardAdmin MuseumName="Musei in Commune9" Address="Street 11" OpeningHours="M-S: 12:30 - 5:30" ImagePath="Images/randmuseum.png" />
            @foreach (Museum mus in cs.museums.Values)
            {
                <MuseumCardClient m=mus/>
            }
        }
    </div>

</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await cs.GetMuseums();
    }
}
