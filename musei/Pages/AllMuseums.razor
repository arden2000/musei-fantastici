@page "/allmuseums"
@using Radzen
@using musei.Data


<br />
<h3>All Museums</h3>
<br />

<div class="flexColumn">
    <div class="museumList">
        <MuseumCardClient MuseumName="Museo de Roma" Address="Street 00" OpeningHours="M-S: 12:30 - 5:30" ImagePath="Images/randmuseum.png" />
        <MuseumCardAdmin MuseumName="Musei in Commune" Address="Street 11" OpeningHours="M-S: 12:30 - 5:30" ImagePath="Images/randmuseum.png" />
        @foreach (Museum m in DatabaseController.museums.Values)
        {
            <MuseumCardClient MuseumName=@m.name Address=@m.address OpeningHours=@m.hours ImagePath="Images/randmuseum.png" />
        }
    </div>

</div>

