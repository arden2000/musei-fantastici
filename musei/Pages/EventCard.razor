@page "/eventcard"

@using Radzen
@using Microsoft.Maui.Graphics


<style>
    .flexRow {
        display: flex;
        flex-direction: row;
    }

    .flexColumn {
        display: flex;
        flex-direction: column;
        gap: 0.5em;
    }

    .textIcon {
        display: flex;
        flex-direction: row;
        margin-left: auto;
        margin-right: 0;
        justify-content: flex-end;
        gap: 5px;
    }

    img {
        max-width: 100%;
    }
</style>

<RadzenCard class="flexColumn">
    <img src=@ImagePath />
        <div class="flexRow">
            <RadzenText TextStyle="TextStyle.H4" TextAlign="TextAlign.Left">@EventName</RadzenText>
            <div class="textIcon">
                <RadzenText TextStyle="TextStyle.H5" TextAlign="TextAlign.Right">@Date</RadzenText>
                <RadzenIcon Icon="schedule" />
            </div>
        </div>
        <div class="flexRow">
            <RadzenText TextStyle="TextStyle.H5" TextAlign="TextAlign.Left">@MuseumName</RadzenText>
            <div class="textIcon">
                <RadzenText TextStyle="TextStyle.H5" TextAlign="TextAlign.Right">@Time</RadzenText>
                <RadzenIcon Icon="event" />
            </div>
        </div>

    <div>@Body</div>


</RadzenCard>

@code {
    [Parameter]
    public string EventName { get; set; }

    [Parameter]
    public string MuseumName { get; set; }

    [Parameter]
    public string Date { get; set; }

    [Parameter]
    public string Time { get; set; }

    [Parameter]
    public string Body { get; set; }

    [Parameter]
    public string ImagePath { get; set; }
}

