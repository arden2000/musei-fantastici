@page "/addperson"

@using Radzen
@using Microsoft.Maui.Graphics

<link rel="stylesheet" href="~/@(nameof(musei)).styles.css" />

<RadzenCard>
    <h5>Person @Count</h5>
    <RadzenTextBox Placeholder="Name" Class="w-100" />
    <RadzenTextBox Placeholder="Email" Class="w-100" />
    <RadzenTextArea Placeholder="Special accomodations (optional)" Class="w-100" Rows="2" />
</RadzenCard>

@code {
    [Parameter]
    public int Count { get; set; }
}
