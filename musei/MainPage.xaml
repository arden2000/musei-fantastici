<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local1="clr-namespace:musei"
            x:Class="musei.MainPage"
            BarBackgroundColor="White"
            SelectedTabColor="#f44336"
            NavigationPage.HasNavigationBar="False">
            
    <NavigationPage Title="Home">
        <x:Arguments>
            <local1:xHomePage />
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Museums">
        <x:Arguments>
            <local1:xAllMuseums />
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Account">
        <x:Arguments>
            <local1:xAccount />
        </x:Arguments>
    </NavigationPage>
    
</TabbedPage>